<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.assistant.mapper.PatientMapper">
    <insert id="insert">
        insert into patient(username, password, exception)
        values (#{username}, #{password}, 0)
    </insert>

    <select id="password" resultType="java.lang.String">
        select patient.password
        from patient
        where username = #{username}
    </select>
    <select id="selectAll" resultType="com.assistant.model.enity.Patient">
        select  `username`, `name`, `sex`, `age`, `phone`, `exception`
        from patient
    </select>
    <select id="count" resultType="java.lang.Long">
        select count(*)
        from patient
    </select>
</mapper>